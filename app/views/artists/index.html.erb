<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= image_tag artist.profilepic.url(:thumb) %></td>
        <td><%= artist.first_name %></td>
        <td><%= artist.last_name %></td>
        <td><%= artist.description %></td>
        <td><%= link_to 'Show', artist %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <% if current_user.artist.present? %>
    <%= link_to 'Add New Art', new_art_path %>
  <% else %>
    <%= link_to 'Join as an Artist!', new_artist_path %>
  <% end %>
<% else %>
  <%= link_to 'Join as an Artist!', new_user_registration_path %>
<% end %>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script src="//maps.google.com/maps/api/js?key=<%=ENV['GOOGLE_MAP_SECRET']%>"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>

<script type="text/javascript">

  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  // markers = handler.addMarkers(<%=raw @hash.to_json %>);

    markers = handler.addMarkers([
      {
        "lat": 0,
        "lng": 0,
        "picture": {
          "url": "http://people.mozilla.com/~faaborg/files/shiretoko/firefoxIcon/firefox-32.png",
          "width":  32,
          "height": 32
        },
        "infowindow": "hello!"
      }
    ]);

    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });

</script>
