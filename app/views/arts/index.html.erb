<p id="notice"><%= notice %></p>

<h1>Arts</h1>

<%= search_form_for @q do |f| %>
  <%= f.label :search %>
  <%= f.search_field :title_or_description_or_size_or_medium_or_location_cont %>
  <%= f.submit %>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Size</th>
      <th>Medium</th>
      <th>Location</th>
      <th>Date made</th>
      <th>User</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @arts.each do |art| %>
      <tr>
        <td><%= image_tag art.image.url(:thumb) %></td>
        <td><%= art.title %></td>
        <td><%= art.description %></td>
        <td><%= art.price %></td>
        <td><%= art.size %></td>
        <td><%= art.medium %></td>
        <td><%= art.location %></td>
        <td><%= art.date_made %></td>
        <td><%= art.user.email %></td>
        <td><%= rating_for art, 'rating', star: 5 %></td>
        <td><%= link_to 'Show', art %></td>
        <td><%= link_to 'Edit', edit_art_path(art) %></td>
        <td><%= link_to 'Destroy', art, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <% if current_user.artist.present? %>
    <%= link_to 'Add New Art', new_art_path %>
  <% else %>
    <%= link_to 'Join as an Artist!', new_artist_path %>
  <% end %>
<% else %>
  <%= link_to 'Join as an Artist!', new_user_registration_path %>
<% end %>
